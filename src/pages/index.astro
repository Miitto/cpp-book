---
import Layout from "@layouts/Layout.astro";
import { getSitemap } from "src/site";
const sitemap = getSitemap();
---

<Layout title="Cpp Book">
    <h1>Cpp Book</h1>
    <ol>
        {
            sitemap.map((item) => (
                <li>
                    <h2>{item.name}</h2>
                    <ol>
                        {item.pages.map((child) => (
                            <li>
                                <a href={child.link}>
                                    {child.name}{" "}
                                    {child.name == "Index" &&
                                    item.name == "Introduction"
                                        ? " (this page)"
                                        : ""}
                                </a>
                            </li>
                        ))}
                    </ol>
                </li>
            ))
        }
    </ol>
</Layout>

<style>
    h2 {
        margin-bottom: 0;
        width: fit-content;
        display: inline-block;
    }
</style>
