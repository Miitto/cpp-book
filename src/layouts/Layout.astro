---
import "@styles/code.scss";
import { getNeighbors, urlBase } from "src/site";
interface Props {
    title: string;
}

const { title } = Astro.props;

const { url } = Astro;
const neighbors = getNeighbors(url.pathname);
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="A Simple site to learn C++"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/cpp-book/favicon.svg"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>{title}</title>
    </head>
    <body>
        {
            url.pathname == "/" || url.pathname == "/cpp-book/" ? (
                ""
            ) : (
                <a href={urlBase}> &lt;-- Back to index </a>
            )
        }
        <slot />
        <div>
            {
                url.pathname == "/" || url.pathname == "/cpp-book/" ? (
                    <span />
                ) : (
                    <a
                        href={neighbors.prev?.link}
                        id="prev"
                    >
                        &lt;-- {neighbors.prev?.name}
                    </a>
                )
            }
            <a
                href={neighbors.next?.link}
                id="next"
            >
                {neighbors.next?.name} --&gt;
            </a>
        </div>
    </body>
</html>

<style>
    body {
        padding: 0.5rem;
        margin-top: 10px;
    }

    body > div {
        display: flex;
        justify-content: space-between;
        width: 100%;
        padding-block: 2rem;
    }

    body > div a {
        padding: 0.25rem 0.5rem;
        background-color: #5555;
        color: black;
    }

    @media (prefers-color-scheme: dark) {
        body > div a {
            color: white;
        }
    }

    body > a {
        text-decoration: none;
        color: rgb(var(--accent));
        position: absolute;
        top: 10px;
        left: 10px;
        padding: 0.25rem 0.5rem;
        border-bottom: 1px solid #5555;
    }

    @media screen and (max-width: 800px) {
        body {
            grid-template-columns: 1fr;
        }
    }

    body div:first-child {
        max-width: fit-content;
    }
</style>
<style is:global lang="scss">
    * {
        box-sizing: border-box;
    }
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );

        --button: 19, 21, 26;
        --button-hover: 30, 32, 40;

        @media (prefers-color-scheme: dark) {
            --button: 30, 32, 40;
            --button-hover: 19, 21, 26;
        }
    }

    h1:target,
    h2:target,
    h3:target,
    h4:target,
    h5:target,
    h6:target {
        color: rgb(var(--accent));
    }

    table {
        border: 1px solid #5555;
    }

    thead {
        background-color: #f5f5f5;
    }

    tr:nth-child(even) {
        background-color: #f5f5f5;
    }

    td,
    th {
        padding: 0.25rem;
    }

    @media (prefers-color-scheme: dark) {
        table {
            border: 1px solid #999;
        }

        thead {
            background-color: #333;
        }

        tr:nth-child(even) {
            background-color: #222;
        }
    }

    ol {
        counter-reset: item;
        li {
            display: block;

            &::before {
                content: counter(item) ". ";
                counter-increment: item;
                color: rgb(var(--accent));
            }
        }
    }

    a {
        color: rgb(var(--accent));
        text-decoration: none;

        &:visited {
            color: rgb(var(--accent-dark));

            @media (prefers-color-scheme: dark) {
                color: rgb(var(--accent-light));
            }
        }
    }

    html {
        font-family: system-ui, sans-serif;
        background-color: #fcfcfc;
        color: black;

        @media (prefers-color-scheme: dark) {
            background: #13151a;
            color: white;
        }
    }

    blockquote {
        border-left: 4px solid rgb(var(--accent));
        padding-left: 1.5rem;
        margin-inline: 0;
    }
</style>
